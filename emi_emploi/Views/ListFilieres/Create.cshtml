@model emi_emploi.Models.ListFiliere

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ListFiliere</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdFiliere" class="control-label"></label>
                <select asp-for="IdFiliere" class="form-control">
                    @foreach (var f in ViewBag.filieres as List<Filiere>)
                    {
                        <option value=@f.id>@f.nom</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdPromotion" class="control-label"></label>
                <select asp-for="IdPromotion" class="form-control">
                    @foreach (var p in ViewBag.promotions as List<Promotion>)
                    {
                        <option value=@p.id>@p.nom</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
